apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: salutations-deployment
spec:
  replicas: 3
  template:
    metadata:
        labels:
           app: salutations
    spec:
      containers:
        image: justatad/salutations_globe
        name: salutations
        ports:
        - containerPort: 8080
      resources:
        requests:
          memory: "64Mi"
          cpu: "250m"

---

kind: Service
apiVersion: v1
metadata:
  name: salutations
spec:
  type: NodePort
  selector:
    app: salutations
  ports:
  - protocol: TCP
    port: 80
    targetPort: 8080
 
 ---
 
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: salutations
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/subnets: subnet-4c50b416, subnet-2ae24862, subnet-719b3e17
spec:
  rules:
  - host: salutations.zigzag-london.net
  - http:
      paths:
      - path: /
        backend:
          serviceName: salutations
          servicePort: 80
